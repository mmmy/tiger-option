# Tiger Options Trading Service Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=true
RELOAD=true

# Application Mode
USE_MOCK_MODE=true
USE_TEST_ENVIRONMENT=true

# Database Configuration
DATABASE_URL=sqlite:///./data/tiger_options.db
DATABASE_ECHO=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/tiger_options.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Tiger API Configuration
TIGER_API_TIMEOUT=30
TIGER_API_RETRY_COUNT=3
TIGER_API_RETRY_DELAY=1

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Trading Configuration
DEFAULT_ORDER_TYPE=limit
DEFAULT_TIME_IN_FORCE=day
MAX_POSITION_SIZE=1000
RISK_MANAGEMENT_ENABLED=true

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_TIMEOUT=30

# Monitoring and Alerts
ENABLE_METRICS=true
METRICS_PORT=9090
ALERT_WEBHOOK_URL=

# Development Settings
PYTEST_CURRENT_TEST=
TESTING=false
